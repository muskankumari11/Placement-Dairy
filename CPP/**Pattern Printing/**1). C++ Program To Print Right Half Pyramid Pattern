#include <iostream>
using namespace std;

int main()
{
    int rows = 5;  // Number of rows in the pyramid

    // Outer loop to control the number of rows
    for (int i = 1; i <= rows; i++) {
    
        // Inner loop to print stars (*)
        for (int j = 1; j <= i; j++) {
            cout << "* ";  // Printing the star
        }

        cout << "\n";  // New line after each row
    }

    return 0;
}
