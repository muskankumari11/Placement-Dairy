#include <bits/stdc++.h>
using namespace std;

void avgarray(int arr[], int n) {
    int sum = 0;
    for (int i = 0; i < n; i++) {
        sum += arr[i];
    }

    double avg = (double)sum / n;
    cout << "Average is: " << avg << endl;
}

int main() {
    int arr[] = {1, 2, 3, 4, 5};
    int n = sizeof(arr) / sizeof(arr[0]);
    avgarray(arr, n);
    return 0;
}
