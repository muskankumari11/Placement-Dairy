#include <bits/stdc++.h>

int largestElement(vector<int> &arr, int n) {
    int largest = arr[0];
    for(int i = 1; i < n; i++) {
        if(arr[i] > largest)
            largest = arr[i];
    }
   return largest;
}

//gfg
class Solution {
  public:
    int largest(vector<int> &arr) {
        int n=arr.size();
        int maxi=INT_MIN;;
        for(int i=0;i<n;i++){
             maxi=max(maxi,arr[i]);
            
        }
        return maxi;
        // code here
    }
};

//tc-> o(n)
